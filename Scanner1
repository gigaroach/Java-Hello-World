import java.util.Scanner;

class Main {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        String mylord = scan.nextLine();
        String serv = scan.nextLine();
        int mailcount = scan.nextInt();
        System.out.println("Привет, " + mylord + ", это твой помощник " + serv + ".\nУ тебя " + mailcount + " новых писем.");
        scan.close();
    }
}
